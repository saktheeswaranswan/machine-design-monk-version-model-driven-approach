{
  "name": "pcyl-web-server",
  "version": "0.0.0",
  "description": "Piston-Cylinder problem - Web Interface Server",
  "main": "server.js",
  "scripts": {
    "start": "npm run build && node ./build/server.js",
    "server": "nodemon ./src/server.js --exec babel-node",
    "clean": "rm -rf build && mkdir build",
    "build-babel": "babel -d ./build ./src -s",
    "build": "npm run clean && npm run build-babel",
    "heroku-postbuild": "cd client && npm install && npm run build",
    "test": "npm run build && mocha --timeout 10000 --recursive ./build",
    "coverage": "npm run build && istanbul cover node_modules/mocha/bin/_mocha --- --timeout 10000 --recursive ./build",
    "showcoverage": "open coverage/lcov-report/index.html"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thegrumpys/pcyl-web.git"
  },
  "author": "thegrumpys",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/thegrumpys/pcyl-web/issues"
  },
  "homepage": "https://pcyl-web.herokuapp.com/",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "chai": "^4.1.2",
    "chai-http": "^4.0.0",
    "istanbul": "^0.4.5",
    "mocha": "^5.2.0",
    "nodemon": "^1.18.3"
  },
  "dependencies": {
    "babel-preset-env": "^1.7.0",
    "body-parser": "^1.18.3",
    "dotenv": "^6.0.0",
    "express": "^4.16.3",
    "node-mysql": "^0.4.2"
  }
}
